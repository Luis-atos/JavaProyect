pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
            script{
                echo 'Configurando variables env.${M2_HOME}'
                def mvnHome = tool 'M2'
                
   def mvnHome=env.${M2_HOME}
   echo '${mvnHome}    ${mvnHome}\\bin'
   echo '${mvnHome}\\bin\\mvn -version'
                sh 'env.${M2_HOME}\\bin\\mvn -version'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
