pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Configurando variables'
   def mvnHome = tool 'M2'
   env.PATH = "${mvnHome}/bin:${env.PATH}"
   echo "var mvnHome=${mvnHome}"
   echo "var env.PATH='${env.PATH}'"
                sh 'mvn -version'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
