pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
            script{
                echo 'Configurando variables'
                def mvnHome = tool 'M2'
                
   echo "var mvnHome=${mvnHome}"
   echo "var env.PATH='${env.PATH}'"
                sh '${mvnHome}\bin\mvn -version'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
