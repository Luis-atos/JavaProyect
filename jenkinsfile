pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
            script{
                echo 'Configurando variables -->'
                def ruta =${pwd()}
                echo '--> ruta ${ruta}'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
